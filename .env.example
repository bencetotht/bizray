# Environment Configuration
NODE_ENV=production

# PostgreSQL Configuration
POSTGRES_DB=bizray
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# Application Ports
BACKEND_PORT=3000
FRONTEND_PORT=80

# JWT Configuration
# REQUIRED: Generate a strong secret key (e.g., using: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION_HOURS=168

# Austrian Court Register API Configuration
# REQUIRED: Obtain from your API provider
API_KEY=your_api_key_here
WSDL_URL=your_wsdl_url_here

# Database Connection Pool Configuration (optional)
BIZRAY_DB_POOL_SIZE=20
BIZRAY_DB_MAX_OVERFLOW=40
